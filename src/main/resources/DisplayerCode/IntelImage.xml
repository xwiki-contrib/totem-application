  <content>{{include reference="DisplayerCode.DisplayerTools"/}}

{{velocity}}
#set($discard = $xwiki.ssx.use('DisplayerCode.IntelImage'))
#set($discard = $xwiki.jsx.use('DisplayerCode.IntelImage'))

{{html wiki="true"}}
&lt;div class="row"&gt;
  #foreach($document in $blockDisplayerDocList)
    #setDataMap($document $blockDisplayerDocClass $blockDisplayerFields)
    #set($urlIntelLogo = '')
    #if($!{dataMap.image} != '')
      #set($urlIntelLogo = $document.getAttachmentURL($dataMap.image, 'download'))
    #end
    ##START## Avoid cramming the images
    #if(($velocityCount - 1) % 6 == 0 &amp;&amp; $velocityCount != 1)
      &lt;div class="clearfix visible-md-block visible-lg-block"&gt;&lt;/div&gt;
    #end
    #if(($velocityCount - 1) % 4 == 0 &amp;&amp; $velocityCount != 1)
      &lt;div class="clearfix visible-sm-block"&gt;&lt;/div&gt;
    #end
    #if(($velocityCount - 1) % 3 == 0 &amp;&amp; $velocityCount != 1)
      &lt;div class="clearfix visible-xs-block"&gt;&lt;/div&gt;
    #end
    ##END##
    #if($urlIntelLogo != '')
      &lt;div class="col-xs-4 col-sm-3 col-md-2 intelRow inteldisplayer"&gt;
        &lt;div class="center imageContainer"&gt;
          &lt;div id="effect-1"&gt;
            &lt;div id="box" class="box"&gt;
              &lt;img class="intelImage "src="$!{urlIntelLogo}" alt="Responsive image"&gt;
              &lt;div class="overlay center"&gt;
                {{html}}
                  &lt;a href='$!{dataMap.url}' class="expand"&gt;+&lt;/a&gt;
                {{/html}}
              &lt;/div&gt;
            &lt;/div&gt;
          &lt;/div&gt; 
        &lt;/div&gt;
      &lt;/div&gt;
    #end
  #end
&lt;/div&gt;
{{/html}}
{{/velocity}}</content>
